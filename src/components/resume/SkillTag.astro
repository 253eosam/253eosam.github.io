---
interface Props {
  label: string;
}

const { label } = Astro.props;
---

<span class="skill-tag">{label}</span>

<style>
  .skill-tag {
    display: inline-block;
    padding: 4px 14px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 9999px;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    white-space: nowrap;
  }
</style>
